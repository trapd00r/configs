<!-- Window Borders -->
	<draw_ops name="corners_rounded_top">
		<!-- left Corner -->
		<line color="shade/gtk:bg[NORMAL]/0.7" x1="1" y1="2" x2="1" y2="4"/>
		<line color="shade/gtk:bg[NORMAL]/0.7" x1="3" y1="1" x2="4" y2="1"/>
