        # Selected text in entries, text widget, 
        # lists and trees 
        ############################################

        image {
            function        = FLAT_BOX
            recolorable     = TRUE
            state           = INSENSITIVE
            detail          = "selected"
            file            = "text_selected_insensitive.png"
            border          = { 2, 2, 2, 2 }
            stretch         = TRUE
        }
        image {
            function        = FLAT_BOX
            recolorable     = TRUE
            detail          = "selected"
            file            = "text_selected.png"
