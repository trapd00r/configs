            function        = FLAT_BOX
            recolorable     = TRUE
            state           = INSENSITIVE
            detail          = "text"
            file            = "text_insensitive.png"
            border          = { 2, 2, 2, 2 }
            stretch         = TRUE
        }
        image {
            function        = FLAT_BOX
            recolorable     = TRUE
