            stretch         = TRUE
        }
        image {
            function        = FLAT_BOX
            recolorable     = TRUE
            detail          = "viewportbin"
            file            = "background.png"
            stretch         = FALSE
        }

        ############################################
        # Arrows 
        ############################################

        image {
            function        = ARROW
            recolorable     = TRUE
            state           = NORMAL
